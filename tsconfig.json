{
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": [
      "vitest/globals",
      "node"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "removeComments": true
  }
}
