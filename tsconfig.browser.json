{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.node.ts", "src/**/*.node.tsx", "**/*.spec.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "outDir": "lib/browser",
    "target": "ES2020",
    "moduleResolution": "classic",
  }
}

